# Database Configuration
# Production (PostgreSQL) - RECOMMENDED
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/payment_db

# Development (SQLite) - Uncomment for local development
# DATABASE_URL=sqlite+aiosqlite:///./payment.db

# Security
WEBHOOK_SECRET=your_super_secret_string_min_32_chars_change_this_in_production

# Application
BASE_URL=http://localhost:8000

